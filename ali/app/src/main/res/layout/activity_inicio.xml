<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/line" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:text="PESAS"
        android:textColor="#F5649D"
        android:textSize="30sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_centerVertical="true">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/line_sup">

        <Button
            android:id="@+id/btnpesas"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/bascula"></Button>

        <Button
            android:id="@+id/btncuentas"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/coin"></Button>

        <Button
            android:id="@+id/btnproveedor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="75dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/user"
            android:gravity="center"></Button>
    </LinearLayout>

</RelativeLayout>