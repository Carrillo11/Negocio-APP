<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/line">

        <TextView
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:fontFamily="@font/comfortaa_bold"
            android:orientation="horizontal"
            android:text="PESAS"
            android:textColor="#000000"
            android:textSize="15sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="735dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvproveedor"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/radius_contorno"
            android:fontFamily="@font/lato"
            android:hint="Proveedor"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spn_producto"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/radius_contorno"
            android:fontFamily="@font/lato"
            android:hint="Seleccione" />

        <EditText
            android:id="@+id/et_cantidad"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/radius_contorno"
            android:fontFamily="@font/lato"
            android:hint="LIBRAS"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnfecha"
                android:layout_width="36dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/calendar"
                android:fontFamily="@font/lato" />

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@drawable/radius_contorno"
                android:fontFamily="@font/lato"
                android:hint="2021-12-04"
                android:textColor="#000000"
                android:textSize="15sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/radius_contorno"
            android:fontFamily="@font/lato"
            android:hint="Timestamp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btncompartir"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/btnradius"
            android:onClick="compartir"
            android:text="COMPARTIR"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnenviar"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/btnradius"
            android:onClick="guardar"
            android:text="ENVIAR"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnsalir"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="168dp"
            android:layout_marginTop="115dp"
            android:layout_marginRight="168dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/x" />

    </LinearLayout>



</RelativeLayout>