<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/line" >

        <TextView
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/comfortaa_bold"
            android:text="PROVEEDORES"
            android:textColor="#000000"
            android:textSize="15sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="645dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="229dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/container"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvnombre_a"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/lato"
                android:text="ANDRES"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnagregar_a"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/agregar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="229dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/container"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvnombre_n"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/lato"
                android:text="NELSON"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnagregar_n"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/agregar" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/line_sup">

        <Button
            android:id="@+id/btnproveedor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/user"></Button>

        <Button
            android:id="@+id/btncuentas"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/coin"></Button>
    </LinearLayout>

</RelativeLayout>